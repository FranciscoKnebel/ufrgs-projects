<!DOCTYPE html>
<html>
	<head>
		<title>Cooper Comics</title>

		<% include ../snippets/head %>
		<% include ../snippets/analytics %>
		<% include ../snippets/css %>
	</head>
	<body>
    <% include ../snippets/navbar/navbar %>

    <div class="pusher">
    	<div class="ui inverted vertical masthead center aligned segment">
    		<% include ../snippets/navbar/navbar-fixed %>

    		<div class="ui text container">
    			<h1 class="ui inverted header" style="margin-top: 0.5em;">
    				Cooper Comics
    			</h1>
    		</div>
    	</div>

    	<% if (message.length > 0) { %>
    		<div class="ui text container">
    			<div class="ui message">
    				<div class="content">
    					<%= message %>
    				</div>
    			</div>
    		</div>
    	<% } %>

    	<div class="ui container" style="margin-top: 1em;">
        <div class="ui very padded segment">
					<div class="ui grid">
						<div class="tablet only computer only row">
							<h2 class="ui header">
								<i class="archive icon"></i>
								<div class="content">
									<%= auctionType %>
									<div class="sub header"><%= userType %></div>
								</div>
								<a href="/app" class="ui big inline red button" style="margin-top: 0.5em;">Voltar</a>
							</h2>
						</div>
						<div class="mobile only row">
							<h3 class="ui header">
								<i class="archive icon"></i>
								<div class="content">
									<%= auctionType %>
									<div class="sub header"><%= userType %></div>
								</div>
								<a href="/app" class="ui big inline red button" style="margin-top: 0.5em;">Voltar</a>
							</h3>
						</div>
					</div>


        	<div class="ui relaxed divided items">
            <% if(leiloes.length > 0) { %>
              <% for (leilao of leiloes) { %>
                <div class="item">
                  <a class="ui small image" href="/leilao/<%= leilao._id %>" target="_self">
                    <img src="<%= leilao.book.images[0] %>">
                  </a>
                  <div class="content">
                    <a class="header" href="/leilao/<%= leilao._id %>" target="_self"><%= leilao.book.title %></a>
                    <div class="description">
                      <p><%= leilao.book.author %></p>
                    </div>
                    <div class="meta">
                      <a>Edição: <%= leilao.book.edition %></a><br>
                      <a>Preço inicial: <%= leilao.initialPrice %></a><br>
                      <a>Preço atual: <%= leilao.currentPrice %></a><br>
                      <a>Lances: <%= leilao.bids.length %></a><br>
                      <a>Final de leilão: <%= leilao.limitDateString %></a>
                    </div>
                    <div class="description">
                      <p><%= leilao.description %></p>
                    </div>
                    <div class="extra">
											<% if(payment) { %>
												<a href="/leilao/usuario/pagamento/<%= leilao._id %>" class="ui right floated green button"  target="_self">
													Efetuar Pagamento
													<i class="right chevron icon"></i>
												</a>
											<% } %>
                      <a href="/leilao/<%= leilao._id %>" class="ui right floated primary button"  target="_self">
                        Acessar Leilão
                        <i class="right chevron icon"></i>
                      </a>
                    </div>
                  </div>
                </div>
              <% } %>
            <% } else { %>
              <div class="">
          			<h3 class="header">
          				Não há resultados para esse tipo de leilão para o seu usuário.
          			</h3>
          		</div>
            <% } %>
        	</div>
        </div>
    	</div>

    	<% include ../snippets/footer %>
    </div>

    <% include ../snippets/js %>
	</body>
</html>
