<!DOCTYPE html>
<html>
	<head>
		<title>Cooper Comics</title>

		<% include ../snippets/head %>
		<% include ../snippets/analytics %>
		<% include ../snippets/css %>

		<style media="screen">
			html {
				background-image: url('/img/cb_background.jpg');
			}
			label {
				text-align: left;
			}
		</style>
	</head>
	<body>
		<div class="ui container middle aligned center aligned grid" style="padding-top: 100px;">
			<div class="sixteen wide mobile ten wide computer column">
				<h1 style="color: white;">Signup</h1>
				<form class="ui large form error" action="/signup" method="post">
					<div class="ui stacked segment">
						<div class="required field">
							<label>Nome completo</label>
							<div class="ui left icon input">
								<i class="write icon"></i>
								<input type="text" placeholder="Nome completo" name="nome" autocomplete="on">
							</div>
						</div>
						<div class="required field">
							<label>Endereço</label>
							<div class="ui left icon input">
								<i class="home icon"></i>
								<input type="text" placeholder="Endereço" name="endereco" autocomplete="on">
							</div>
						</div>
						<div class="required field">
							<label>CPF</label>
							<div class="ui left icon input">
								<i class="hashtag icon"></i>
								<input type="text" placeholder="CPF" name="CPF" autocomplete="on">
							</div>
						</div>
						<div class="required field">
							<label>Telefone</label>
							<div class="ui left icon input">
								<i class="call icon"></i>
								<input type="tel" placeholder="Telefone" name="telefone" autocomplete="on">
							</div>
						</div>
						<div class="required field">
							<label>Email</label>
							<div class="ui left icon input">
								<i class="user icon"></i>
								<input type="email" placeholder="E-mail" name="email">
							</div>
						</div>
						<div class="required field">
							<label>Senha</label>
							<div class="ui left icon input">
								<i class="lock icon"></i>
								<input type="password" placeholder="Senha" name="password">
							</div>
						</div>
						<div class="inline field">
					    <div class="ui checkbox">
					      <input name="terms" type="checkbox">
					      <label>Você concorda com os <a href="#" target="_blank">termos e condições</a> da Cooper Comics.</label>
					    </div>
					  </div>
						<button type="submit" class="ui teal submit button">Se inscrever</button>
					</div>
					<% if (message.length > 0) { %>
						<!-- show any messages that come back with authentication -->
						<div class="ui error message">
							<div class="header">Oops!</div>
							<div class="content">
								<%= message %>
							</div>
						</div>
					<% } else { %>
						<div class="ui error message"></div>
					<% } %>
				</form>

				<div class="ui message">
					<div class="ui buttons">
						<a href="/login" class="ui vertical animated primary button">
							<div class="visible content">
								Entrar</div>
							<div class="hidden content">
								<i class="left arrow icon"></i>
							</div>
						</a>
						<a href="/" class="ui vertical animated green button">
							<div class="visible content">
								Home</div>
							<div class="hidden content">
								<i class="right arrow icon"></i>
							</div>
						</a>
					</div>
				</div>
			</div>
		</div>

		<% include ../snippets/js %>
		<script src="/js/formvalidation/signup.js" charset="utf-8"></script>
	</body>
</html>
